#version 330 core
layout (location = 0) in vec3 fancy_pos;
layout (location = 1) in vec3 main_color;

uniform mat4 MVP;
uniform vec3 fancy_color;


out vec3 ourColor;
out vec3 FancyColor;


void main()
{
    gl_Position = MVP * vec4(fancy_pos.x, fancy_pos.y, fancy_pos.z, 1.0);
    ourColor = main_color;
    FancyColor = fancy_color;
}